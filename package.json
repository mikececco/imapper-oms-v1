{
  "name": "order-management-system",
  "version": "1.0.0",
  "description": "Order management system with Zapier integration using Supabase",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "server": "node src/server.js",
    "client": "cd client && npm start",
    "dev:server": "npx nodemon src/server.js",
    "dev:client": "cd client && npm start",
    "build": "cd client && npm run build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "dev": "next dev",
    "build:next": "next build",
    "start:next": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.21.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "next": "^15.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "stripe": "^12.0.0",
    "supabase": "^2.15.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^6.3.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "nodemon": "^2.0.14",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.0.0"
  }
}

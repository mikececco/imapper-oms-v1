{
  "name": "order-management-system",
  "version": "1.0.0",
  "description": "Order management system with Zapier integration using Supabase",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "server": "node src/server.js",
    "client": "cd client && npm start",
    "dev:server": "npx nodemon src/server.js",
    "dev:client": "cd client && npm start",
    "build": "cd client && npm run build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.21.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "stripe": "^12.0.0",
    "supabase": "^2.15.8"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "nodemon": "^2.0.14"
  }
}
